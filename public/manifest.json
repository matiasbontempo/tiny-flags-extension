{
  "name": "Tiny Flags Extension",
  "description": "Companion extension for Tiny Flags, a client-side feature flags system",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png",
    "default_title": "Tiny Flags"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}